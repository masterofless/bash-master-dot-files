[user]
   name = Andy Cohan
   email = cohana@avalonconsult.com
[core]
   filemode = false
   autocrlf = false
   excludesfile=~/.gitignore
   editor=vim -u NONE
[diff]
    renames = true
[alias]
   amend = commit --amend
   atop = commit --amend -C HEAD
   br = !git --no-pager branch
   ci = commit
   co = checkout
   dif = diff --name-status
   dns = diff --name-status
   idff = diff
   l = log --graph --decorate --pretty='format:%h %Cblue%d%Creset %Cgreen%an%Creset %s' --abbrev-commit --all
   last = log -1 HEAD
   lg = log -p
   lol = log --graph --decorate --pretty=oneline --abbrev-commit
   lola = log --oneline --graph --color --decorate=full --all --abbrev-commit
   ls = ls-files
   ma = checkout master
   pu = pull
   pr = pull --rebase
   pul = pull
   st = status
   viz = !qgit --all
[status]
   relativePaths = true
[color]
   ui = true
[merge]
   tool = vimdiff
   conflictstyle = diff3
[mergetool "nvim"]
  cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"
[push]
   default = current
